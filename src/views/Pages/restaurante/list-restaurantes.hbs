<link rel="stylesheet" href="/css/list-restaurante.css">
<div class="col-md-12" style="margin-bottom: 5px; ">
    <div class="card text-center border border-primary">

        <h3 class="card-title text-uppercase" style="color: rgb(102, 29, 151);">
            Restaurante
        </h3>
    </div>
    <div class="carousel-container">
        <div class="card" href=" ">
            <img src="/images/img-restaurante/kfc.jpeg" alt="">
            <h2>KFC </h2>

        </div>
        <div class="card" href=" ">
            <img src="/images/img-restaurante/mac.jpeg" alt="">
            <h2>MaCdonals</h2>

        </div>
        <div class="card" href=" ">
            <img src="/images/img-restaurante/hacienda.jpeg" alt="">
            <h2>Ushimana</h2>

        </div>
        <div class="card" href=" ">
            <img src="/images/img-restaurante/san.jpeg" alt="">
            <h2>San Bartolo</h2>

        </div>
        <div class="card" href=" ">
            <img src="/images/img-restaurante/abue.jpeg" alt="">
            <h2>Abuelita</h2>

        </div>
        <div class="col-md-12" style="margin-bottom: 5px; ">
            <div class="card text-center border border-primary">

                <h3 class="card-title text-uppercase" style="color:rgb(102, 29, 151);">
                    Registre su Restaurante aki
                </h3>
            </div>
            <a class="imagen-link" href="/restaurantes/add">
                <img src="/images/img-bebida/anadir.png" alt=" ">
            </a>
            <div class="col-md-12" style="margin-bottom: 5px; ">
                <div class="card text-center border border-primary">


                    <h3 class="card-title text-uppercase" style="color: rgb(102, 29, 151);">
                        Agregados
                    </h3>
                </div>


                {{#each restaurantes}}
                <div class="card-body">
                    <p>{{nombre_restaurante}}</p>
                    <p>{{dueno}}</p>
                    <p>{{descripcion}}</p>
                    {{#if foto}}
                    <img class="card__image" src="/{{foto}}" loading="lazy" alt="User Profile">
                    {{else}}
                    <img src="/not-found/not-found-image.png" class="card__image" alt="..." alt="User Profile">
                    {{/if}}
                    <p>{{telefono}}</p>

                    <center>
                        <a href="/restaurantes/delete-restaurantes/{{id}}" class="danger">Eliminar</a>
                        <a href="/restaurantes/edit-restaurantes/{{id}}" class="secondary">Editar</a>

                        <form action="/restaurantes/foto-restaurante/{{id}}" method="POST"
                            encType="multipart/form-data">
                            <input type="file" name="sampleFile" accept="image/*" />
                            <input type="submit">
                        </form>
                    </center>
                </div>
                {{else}}

                {{/each}}