<link rel="stylesheet" href="/css/list-menus.css">
<div class="col-md-12" style="margin-bottom: 5px; ">
    <div class="card text-center border border-primary">

        <h3 class="card-title text-uppercase" style="color: rgb(102, 29, 151);">
            Menus
        </h3>
    </div>
    <div class="carousel-container">
        <div class="card" href=" ">
            <img src="/images/img-menu/almuerzo.jpeg" alt="">
            <h2>Almuerzos</h2>

        </div>
        <div class="card" href=" ">
            <img src="/images/img-menu/desayuno.jpeg" alt="">
            <h2>Desayuno</h2>

        </div>
        <div class="card" href=" ">
            <img src="/images/img-menu/pizza.jpeg" alt="">
            <h2>Picaditass</h2>

        </div>
        <div class="card" href=" ">
            <img src="/images/img-menu/salud.jpeg" alt="">
            <h2>Vegetariano</h2>

        </div>
        <div class="card" href=" ">
            <img src="/images/img-menu/postre.jpeg" alt="">
            <h2>Postre</h2>

        </div>
        <div class="col-md-12" style="margin-bottom: 5px; ">
            <div class="card text-center border border-primary">

                <h3 class="card-title text-uppercase" style="color:rgb(102, 29, 151);">
                    Registre su Postre aki
                </h3>
            </div>
            <a class="imagen-link" href="/menus/add">
                <img src="/images/img-bebida/anadir.png" alt=" ">
            </a>
            <div class="col-md-12" style="margin-bottom: 5px; ">
                <div class="card text-center border border-primary">

                    <h3 class="card-title text-uppercase" style="color: rgb(102, 29, 151);">
                        Agregados
                    </h3>
                </div>

                {{#each menus}}
                <div class="card-body">
                    <p>{{nombre_menu}}</p>
                    <p>{{descripcion}}</p>
                    {{#if foto}}
                    <img class="card__image" src="/{{foto}}" loading="lazy" alt="User Profile">
                    {{else}}
                    <img src="/not-found/not-found-image.png" class="card__image" alt="..." alt="User Profile">
                    {{/if}}
                    <p>{{precio}}</p>

                    <center>
                        <a href="/menus/delete-menus/{{id}}" class="danger">Eliminar</a>
                        <a href="/menus/edit-menus/{{id}}" class="secondary">Editar</a>
                        <form action="/menus/foto-menu/{{id}}" method="POST" encType="multipart/form-data">
                            <input type="file" name="sampleFile" accept="image/*" />
                            <input type="submit">
                        </form>
                    </center>
                </div>
                {{else}}
                <center>
                    
                </center>
                {{/each}}