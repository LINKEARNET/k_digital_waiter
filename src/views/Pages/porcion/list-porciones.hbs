    {{/if}}
   
    <p>{{precio}}</p>

   
    <center>
        <a href="/porciones/delete-porciones/{{id}}" class="danger">Eliminar</a>
        <a href="/porciones/edit-porciones/{{id}}" class="secondary">Editar</a>

        
        <form action="/porciones/foto-porcion/{{id}}" method="POST" encType="multipart/form-data">
            <input type="file" name="sampleFile" accept="image/*" />
            <input type="submit">
        </form>
    </center>
</div>
