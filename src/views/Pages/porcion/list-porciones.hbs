{{#each porciones}}
<div class="card-body">
    <p>{{nombre_porcion}}</p>
    <p>{{descripcion}}</p>
     {{#if foto}}
    <img class="card__image" src="/{{foto}}" loading="lazy" alt="User Profile">
    {{else}}
