<link rel="stylesheet" href="/css/list-platillos.css">
 <div class="col-md-12" style="margin-bottom: 5px; ">
        <div class="card text-center border border-primary">

            <h3 class="card-title text-uppercase" style="color: rgb(102, 29, 151);">
             Platillos
            </h3>
        </div>
<div class="carousel-container">
 <div class="card" href=" ">
        <img src="/images/img-platillo/sushi.jpeg" alt="">
        <h2>Sushi</h2>
      
    </div>
    <div class="card" href=" ">
        <img src="/images/img-platillo/pasta.jpeg" alt="">
        <h2>Pasta</h2>
   
    </div>
    <div class="card" href=" ">
      <img src="/images/img-platillo/taco.jpeg" alt="">
        <h2>Mexicanos</h2>
      
    </div>
   <div class="card" href=" ">
      <img src="/images/img-platillo/ensalada.jpeg" alt="">
        <h2>Ensada cesar</h2>
      
    </div>
     <div class="card" href=" ">
      <img src="/images/img-platillo/polloyverdura.jpeg" alt="">
        <h2>Pollo y verduras</h2>
    </div>
     <div class="col-md-12" style="margin-bottom: 5px; ">
        <div class="card text-center border border-primary">

            <h3 class="card-title text-uppercase" style="color:  rgb(102, 29, 151);">
             Registre su Platillo aki
            </h3> 
        </div>
    <a class="imagen-link" href="/platillos/add"  >
    <img src="/images/img-bebida/anadir.png" alt=" ">
</a>
    <div class="col-md-12" style="margin-bottom: 5px; ">
        <div class="card text-center border border-primary">

            <h3 class="card-title text-uppercase" style="color: rgb(102, 29, 151);">
                Agregados
            </h3>
        </div>

{{#each platillos}}
<div class="card-body">
    <p>{{nombre_platillo}}</p>
    <p>{{descripcion}}</p>
     {{#if foto}}
    <img class="card__image" src="/{{foto}}" loading="lazy" alt="User Profile">
    {{else}}
    <img src="/not-found/not-found-image.png" class="card__image" alt="..." alt="User Profile">
    {{/if}}
    <p>{{precio}}</p>
    
    <center>
        <a href="/platillos/delete-platillos/{{id}}" class="danger">Eliminar</a>
        <a href="/platillos/edit-platillos/{{id}}" class="secondary">Editar</a>
        <form action="/platillos/foto-platillo/{{id}}" method="POST" encType="multipart/form-data">
            <input type="file" name="sampleFile" accept="image/*" />
            <input type="submit">
        </form>
    </center>
</div>
{{else}}
<center> 
</center>
{{/each}}


